<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/picture_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="115dp"
        android:background="@drawable/bg_border1"
        android:src="@drawable/user_picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/account"
        android:layout_marginEnd="22dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/account"
        android:layout_toStartOf="@+id/account" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/jianpan"
        android:layout_alignTop="@+id/password"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:id="@+id/account"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/picture_user"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/account"
        android:layout_alignStart="@+id/account" />

    <com.unstoppable.submitbuttonview.SubmitButton
        android:id="@+id/submit_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="380dp"
        app:buttonText="Submit"
        app:buttonTextSize="25sp" />
</RelativeLayout>